check process nutcracker
    with pidfile "/var/run/nutcracker.pid"
    start program = "/etc/init.d/nutcracker start"
    stop program = "/etc/init.d/nutcracker stop"
    if 2 restarts within 3 cycles then timeout
    if totalmem > 1000 Mb then alert
    if children > 2550 for 5 cycles then stop
    if cpu usage > 95% for 3 cycles then restart
    if failed host <%= node["ipaddress"] %> port 22121 then restart
    if 5 restarts within 5 cycles then timeout
